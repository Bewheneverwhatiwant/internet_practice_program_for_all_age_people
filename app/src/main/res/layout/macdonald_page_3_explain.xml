<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_macdonald_explain"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="햄버거만 드시겠습니까,\n아니면 감자튀김과 콜라도 드시겠습니까?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/btn_round"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/macdonald_explain_eathereoroutside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_macdonald_explain"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="어려워보이지만, 차근차근 알려드릴게요!\n햄버거만 드실건지, 감자튀김과 콜라까지 드실건지\n
고를 수 있는 화면이에요!\n햄버거만 드시고 싶다면 가장 왼쪽의 '단품'을 눌러주세요.\n
감자튀김과 콜라를 곁들이고 싶으시다면,\n적당한 양을 드실건지, 많이 드실건지 골라주세요!\n
적당한 양의 감자튀김과 콜라를 드시고 싶으시다면\n중간의 '미디움 세트'를 누르시고,\n
배가 고파서 감자튀김과 콜라를 많이 드시고 싶으시다면\n가장 오른쪽의 '라지 세트'를 눌러주세요!"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toRightOf="@id/macdonald_explain_eathereoroutside"
        app:layout_constraintTop_toBottomOf="@id/title_macdonald_explain"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/character_explain"
        />

    <TextView
        android:id="@+id/macdonald_explain_back"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/macdonald_explain_eathereoroutside"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="화면 아래 뒤로가기 버튼을 눌러\n키오스크 연습을 계속 하실 수 있어요!"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/btn_round"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/macdonald_explain_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_arrow_under"
        />

</androidx.constraintlayout.widget.ConstraintLayout>