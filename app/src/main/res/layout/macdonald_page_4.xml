<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/checkyourOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="주문하신 내역을 확인해주세요"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/checkyourOrder"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="변경"
        android:textStyle="bold"
        android:background="@drawable/macdonald_green_button"
        />

    <View
        android:layout_width="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/checkyourOrder"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        />

    <ImageView
        android:id="@+id/your_choice_burger_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/checkyourOrder"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/bigmac_macdonald"
        />

    <TextView
        android:id="@+id/your_choice_burger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/checkyourOrder"
        app:layout_constraintLeft_toRightOf="@id/your_choice_burger_image"
        android:text="빅맥 미디움 세트 5000원"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:id="@+id/check_number1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/your_choice_burger_image"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="①"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/is_this_your_burger"
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@id/check_number1"
        app:layout_constraintTop_toBottomOf="@id/your_choice_burger_image"

        android:drawableTop="@drawable/macdonald_choice_bigmac"
        android:text="빅맥"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/would_you_add_topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/is_this_your_burger"
        app:layout_constraintTop_toBottomOf="@id/your_choice_burger_name"
        android:layout_marginTop="20dp"
        android:text="다양한 재료를 추가해보세요"
        android:textSize="20sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/is_this_your_burger"
        app:layout_constraintTop_toBottomOf="@id/would_you_add_topping"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="재료 추가/변경"
        android:background="@drawable/macdonald_green_button"
        />

    <TextView
        android:id="@+id/check_number2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/check_number1"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="②"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/choice_your_set_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/check_number2"
        app:layout_constraintTop_toBottomOf="@id/is_this_your_burger"
        android:text="메뉴를 선택해주세요"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/set_french_fri_medium"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_side_size_fix_for_big_button"
        android:text="감자튀김 미디움"
        android:background="@drawable/border_only_line"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/set_french_fri_large"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_menu"
        app:layout_constraintLeft_toRightOf="@id/set_french_fri_medium"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_side_size_fix_for_big_button"
        android:text="감자튀김 라지"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_only_line"
        android:paddingTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/set_another_menu"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_menu"
        app:layout_constraintLeft_toRightOf="@id/set_french_fri_large"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_another_side_size_fix_for_big_button"
        android:text="다른 메뉴 선택"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_only_line"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/check_number3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/set_french_fri_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text="③"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/choice_your_set_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/check_number3"
        app:layout_constraintTop_toBottomOf="@id/set_french_fri_large"
        android:text="음료를 선택해주세요"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/coca_cola"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_drink"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_cider_size_fix_for_big_button"
        android:text="콜라"
        android:background="@drawable/border_only_line"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sprite_cider"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_drink"
        app:layout_constraintLeft_toRightOf="@id/set_french_fri_medium"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_cider_size_fix_for_big_button"
        android:text="사이다"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_only_line"
        android:paddingTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/another_drink"
        android:layout_width="120dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/choice_your_set_drink"
        app:layout_constraintLeft_toRightOf="@id/set_french_fri_large"
        android:layout_marginTop="10dp"
        android:drawableTop="@drawable/macdonald_coffe_size_fix_for_big_button"
        android:text="다른 메뉴 선택"
        android:layout_marginLeft="15dp"
        android:background="@drawable/border_only_line"
        android:padding="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/macdonald_explain3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sprite_cider"
        android:text="앗, 여기서 어떻게 해야하는지 모르겠다면?\n<<여기를 클릭!>>"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_explain"
        android:layout_marginTop="3dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>