<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green"
    >

    <ImageView
        android:id="@+id/macdonald_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/macdonald_logo"
        />

    <TextView
        android:id="@+id/macdonald_intro_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/macdonald_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="식사하실 장소를 선택해주세요"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/macdonald_eathere"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/macdonald_intro_ment"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/macdonald_eatinside_size_fix"
        android:text="매장에서 식사"
        android:drawablePadding="5dp"
        android:paddingTop="30dp"
        android:background="@drawable/border_round"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/macdonald_eatoutside"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toRightOf="@id/macdonald_eathere"
        app:layout_constraintTop_toBottomOf="@id/macdonald_intro_ment"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/macdonald_eatoutside"
        android:background="@drawable/border_round"
        android:paddingTop="30dp"
        android:text="테이크아웃"
        android:layout_marginLeft="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/macdonald_explain1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/macdonald_intro_ment"
        android:layout_marginTop="400dp"
        android:text="앗, 여기서 어떻게 해야하는지 모르겠다면?\n<<여기를 클릭!>>"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_explain"
        />

</androidx.constraintlayout.widget.ConstraintLayout>